<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="140dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_account_circle_24"
            app:civ_border_color="@color/my_light_primary"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jowel Ahmed"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/noteTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is for note area This is for note area This is for note area"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:stretchColumns="3">
            <TableRow
                android:background="@drawable/background_input_field2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Num"
                    android:textColor="@color/my_light_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="0177000800" />


                <ImageView
                    android:id="@+id/call"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_call_24" />

                <ImageView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_chat_bubble_24" />

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="match_parent" />

            </TableRow>
            <TableRow
                android:background="@drawable/background_input_field2"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Email"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/my_light_primary"/>
                <TextView
                    android:id="@+id/emailTv"
                    tools:text="jowel@gmail.com"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    />
                <ImageView

                    />

                <ImageView
                    android:id="@+id/mail"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_email_24" />
            </TableRow>
            <TableRow android:background="@drawable/background_input_field2"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Temps d'ajout"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/my_light_primary"/>
                <TextView
                    android:id="@+id/addedTimeTv"
                    tools:text="0177000800"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    />
            </TableRow>
            <TableRow android:background="@drawable/background_input_field2"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Temps de modif"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/my_light_primary"/>
                <TextView
                    android:id="@+id/updatedTimeTv"
                    tools:text="0177000800"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    />
            </TableRow>
            <TableRow android:background="@drawable/background_input_field2"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Groupe"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/my_light_primary"/>
                <TextView
                    android:id="@+id/groupTv"
                    tools:text="..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    />
            </TableRow>

        </TableLayout>


    </LinearLayout>

</RelativeLayout>